<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>URL Shortener</title>
    <style>
    table {
        width: 100%;
        table-layout: fixed; /* Prevents expanding beyond the container */
    }

    td, th {
        word-wrap: break-word;
        overflow-wrap: break-word;
        text-overflow: ellipsis;
        overflow: hidden;
    }

    td a {
        display: block;
        max-width: 250px; /* Limit URL width */
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    body {
    background: url('https://4kwallpapers.com/images/walls/thumbs_3t/9413.png') no-repeat center center fixed;
    background-size: cover; 
    margin: 0; 
    padding: 0;
    background-position: center;
    background-attachment: fixed;
    
   
    
   
    
}


        .container {
            max-width: 700px;
            margin-top: 50px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #28a745;
        }
        form {
            display: flex;
            gap: 10px;
            align-items: center;
            justify-content: center;
        }
        input {
            flex-grow: 1;
        }
        table {
            margin-top: 20px;
            text-align: center;
        }
        table th, table td {
            padding: 10px;
            vertical-align: middle;
        }
        table a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }
        table a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>URL Shortener</h1>
        <form action="/shortUrls" method="POST">
            <label for="fullUrl" class="visually-hidden">URL</label>
            <input required placeholder="Enter URL" type="url" name="fullUrl" id="fullUrl" class="form-control">
            <button class="btn btn-success" type="submit">Shrink</button>
        </form>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <!-- Full URL (Truncated with hover tooltip) -->
                        <td>
                            <a href="<%= shortUrl.full %>" target="_blank" class="truncate" title="<%= shortUrl.full %>">
                                <%= shortUrl.full %>
                            </a>
                        </td>
            
                        <!-- Short URL -->
                        <td>
                            <a href="/<%= shortUrl.short %>" target="_blank">
                                <%= shortUrl.short %>
                            </a>
                        </td>
            
                        <!-- Clicks -->
                        <td><%= shortUrl.clicks %></td>
                    </tr>
                <% }) %>
            </tbody>            
        </table>
    </div>
</body>
</html>
